    <xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/caravanTraderKinds</xpath>
    <value>
    <li>ISA_Caravan_Apiculture</li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd" MayRequire="OskarPotocki.VFE.Medieval2">
    <xpath>/Defs/FactionDef[@Name="VFEM2_VikingBase"]/caravanTraderKinds</xpath>
    <value>
    <li>ISA_Caravan_Apiculture</li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd" MayRequire="OskarPotocki.VFE.Medieval2">
    <xpath>/Defs/FactionDef[@Name="VFEM2_MedievalFactionBase"]/caravanTraderKinds</xpath>
    <value>
    <li>ISA_Caravan_Apiculture</li>
    </value>
  </Operation>

</Patch>




